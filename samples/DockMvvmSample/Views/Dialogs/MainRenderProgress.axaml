<Window x:Class="Blitz.Views.MainRenderProgress"
        xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="313">
  <Grid Margin="0">
    <Border Height="3" Background="{DynamicResource SystemAccentColor}" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
    <StackPanel Margin="10">
        <TextBlock Margin="8 5" FontSize="12" FontWeight="Bold">Exporting...</TextBlock>
        <ProgressBar x:Name="ProgressBar" Margin="10"
                        Minimum="0" Maximum="100" Value="0"
                        Foreground="Red"
                        ShowProgressText="True"/>
    </StackPanel>
  </Grid>
</Window>