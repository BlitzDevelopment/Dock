<UserControl x:Class="Blitz.Views.Documents.DocumentView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:skia="clr-namespace:Avalonia.Controls;assembly=Blitz"
             xmlns:vm="using:Blitz.ViewModels.Documents"
             xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             mc:Ignorable="d"
             d:DesignWidth="300" d:DesignHeight="400"
             x:DataType="vm:DocumentViewModel" x:CompileBindings="True">
  <Grid Focusable="True">

    <!-- Existing Content -->
    <Viewbox Stretch="Uniform">
        <Canvas x:Name="MainCanvas" Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}">
            <Rectangle Fill="{Binding CanvasColor}" Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}" />
            <skia:SKXamlCanvas x:Name="MainSkXamlCanvas"/>
        </Canvas>
    </Viewbox>

    <!-- Top Flyout -->
    <Border x:Name="TopFlyout"
            Height="50"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Left ComboBox -->
        <ComboBox Grid.Column="0"
                  Margin="5"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Width="100"
                  SelectedIndex="0">
          <ComboBoxItem Content="Scene 1" />
          <ComboBoxItem Content="Scene 2" />
          <ComboBoxItem Content="Scene 3" />
        </ComboBox>

        <!-- Right Buttons and NumericUpDown -->
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="5">

          <Button Content="Button 1"
                  Margin="5,0"
                  Width="75" />

          <Button Content="Button 2"
                  Margin="5,0"
                  Width="75" />

          <Button Content="Button 3"
                  Margin="5,0"
                  Width="75" />

          <NumericUpDown Width="75"
                        VerticalAlignment="Center"
                        Minimum="0"
                        Maximum="400"
                        Value="10" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- Bottom-right Flyout and ProgressRing -->
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <!-- Group ProgressRing and Flyout -->
      <Grid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- ProgressRing -->
        <progRing:ProgressRing Grid.Column="0"
                               x:Name="ProgressRingControl"
                               Width="40"
                               Height="40"
                               IsActive="True"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SystemAccentColor}" />

        <!-- Flyout --> 
        <Border x:Name="FlyoutContainer"
                Grid.Column="1"
                CornerRadius="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="10,0,0,0"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                Padding="10">
          <StackPanel Orientation="Horizontal">
            <!-- Icon -->
            <Viewbox Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,10,0">
              <Path Data="{DynamicResource ico_err}"
                    Fill="#EED202" />
            </Viewbox>
            <!-- Text -->
            <TextBlock x:Name="FlyoutText"
                      Text="Flyout but it's really long and it should be truncated"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center" />
          </StackPanel>
        </Border>
      </Grid>
    </Grid>
  </Grid>
</UserControl>