<Window x:Class="DockMvvmSample.Views.LibrarySingleRename"
        xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="450" Height="200">
  <StackPanel >
      <TextBlock Margin="8 5" FontSize="12" FontWeight="Bold">Rename Library Items</TextBlock>
      <Border Padding="12">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" Margin="5" VerticalAlignment="Center">Name:</TextBlock>
          <TextBox x:Name="InputRename" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>
        </Grid>
      </Border>
    <Button HorizontalAlignment="Right" Margin="5" Width="100" CornerRadius="20" Click="OkayButton_Click">
      <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Text="OK"/>
    </Button>
  </StackPanel>
</Window>